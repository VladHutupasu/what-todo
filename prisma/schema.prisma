generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model TodoList {
  id              String    @id @default(auto()) @map("_id") @db.ObjectId
  title           String
  description     String
  items           TodoItems[]
}

type TodoItems {
  text      String
  completed Boolean
}